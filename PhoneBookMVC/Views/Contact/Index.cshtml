@using PhoneBookLib;
@model PhoneBookLib.Contact
@{
    ViewData["Title"] = "Index";
}

<div class="rows">
    @Html.Partial("View")
    <div class="row2">
   <h3>Welcome to PhoneBook Application</h3>
  <table class="table table-hover table2">
    <tr><td>
          <img src=@Model.Picture />
    </td></tr>
    <tr>
        <th>Id:</th>
                <td>@Model.Id</td>
    </tr>
    <tr>
        <th>FirstName:</th>
                <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>LastName:</th>
                <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Gender:</th>
                <td>@Model.Gender</td>
    </tr>
    <tr>
        <th>DOB:</th>
                <td>@Model.Dob</td>
    </tr>
    <tr>
        <th>Email:</th>
                <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone:</th>
                <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>City:</th>
                <td>@Model.City</td>
    </tr>
    <tr>
        <th>State:</th>
                <td>@Model.State</td>
    </tr>
    <tr>
        <th>Country:</th>
                <td>@Model.Country</td>
    </tr>
    <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=Model.Id},htmlAttributes:new{@class="btn btn-success"}) 
                </td>
                <td>@Html.ActionLink("Delete", "Delete", new { id=Model.Id},htmlAttributes:new{@class="btn btn-danger"})</td>
    </tr>
</table>
</div>
</div>
